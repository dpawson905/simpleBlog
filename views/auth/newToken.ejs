<%- include ('../partials/header') %>
  <%- include ('../partials/hero') %>
  <main class="p-5 mb-5">
    <div class="container card p-3 shadow mb-5">
      <div class="row">
        <div class="col-6 offset-3">
          <h2 class="text-center">Request a new token</h2>
          <form action="/users/new-token" method="post">
            <div class="row p-3">
              <div class="col-12">
                <div class="form-group">
                  <label for="email">Email Address</label>
                  <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email Address" value="<%= userInfo.email %>">
                </div>
              </div>
              <div class="col-6 offset-3">
                <button id="registerButton" type="submit" class="btn btn-primary btn-block mt-3" >Request Token</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>
  <script>
    $(document).ready(function(){
      $(this).scrollTop(1000);
    });
  </script>
<%- include ('../partials/footer') %>