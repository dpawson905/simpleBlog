<%- include ('../partials/header') %>
  <%- include ('../partials/hero') %>
  <main class="p-5 mb-5">
    <div class="container card p-3 shadow mb-5">
      <div class="row">
        <div class="col-6 offset-3">
          <h2 class="text-center">Request a new token</h2>
          <form action="/auth/reset?_method=PUT" method="post">
            <div class="row p-3">
              <div class="col-12">
                <div class="row">
                  <div class="col-md-6 mb-2">
                    <input type="hidden" name="username" value="<%= username %>">
                    <div class="form-group mb-2">
                      <label for="password">Password</label>
                      <input type="password" class="form-control" id="password" name="password" aria-describedby="password" placeholder="Enter Password">
                    </div>
                  </div>
                  <div class="col-md-6 mb-2">
                    <div class="form-group mb-2">
                      <label for="password2">Confirm Password</label>
                      <input type="password" class="form-control" id="password2" name="password2" aria-describedby="password2" placeholder="Confirm Password">
                      <div><small id="checkPw"></small></div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-6 offset-3">
                <button id="registerButton" type="submit" class="btn btn-primary btn-block mt-3" >Request Token</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>
  <script>
    $(document).ready(function(){
      $(this).scrollTop(1000);
    });
  </script>
<%- include ('../partials/footer') %>