<div class="text-center mt-3 pt-5 d-flex justify-content-center">
  <nav aria-label="Page navigation example">
    <ul class="pagination">
      <% if(currentPage - 1) { %>
        <li class="page-item"><a class="page-link" href="/users/user/<%= currentUser._id %>?page=<%= blogs.page -1 %>">Previous</a></li>
      <% } %>
      <% for(let i = startPage; i <= endPage; i++) { %>
        <li class="page-item <%= typeof currentPage !== 'undefined' && currentPage === i ? 'active' : '' %>"><a class="page-link" href="/users/user/<%= currentUser._id %>?page=<%= i %>"><%= i %></a></li>
      <% } %>
      <% if((currentPage + 1) <= totalPages) { %>
        <li class="page-item"><a class="page-link" href="/users/user/<%= currentUser._id %>?page=<%= blogs.page +1 %>">Next</a></li>
      <% } %>
    </ul>
  </nav>
</div>